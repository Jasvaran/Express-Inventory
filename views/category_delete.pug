extends layout 

block content 
    h1 #{title} #{category.name}

    div.container-fluid
        if carparts.length 
            
            h4 These parts must be deleted before an entire category can be deleted :

            dl 
                each part in carparts
                    dt
                        a(href=part.url) #{part.name}
                    dd
        else 

            p #[strong Are you sure you want to delete this category?]

            form(method='POST', action= '')
                div.form-group
                    input#categoryid.form-control(type='hidden', name='categoryid', required='true'
                        value=category._id)
                    button.btn.btn-primary(type='submit') Delete

                    


    
            




    
