extends layout 

block content 
    h1=title 

    form(method='POST', action='')
        div.form-group
            label(for="name") Name: 
            input#name.form-control(type='text', required='true', placeholder='Honda, Mercedes, etc.',
                name='name' value=(undefined===make ? '' : make.name))
            label(for="year") Year: 
            input#year.form-control(type='number', required='true', placeholder='1990, 2010, etc.',
                name='year', value=(undefined===make ? '' : make.year)) 
            label(for='model') Model: 
            input#model.form-control(type='text', required='true', placeholder='350z, gs300, prius, etc..',
                name='model', value=(undefined===make ? '' : make.model))
    button.btn.btn-primary(type='submit') Submit


    if errors
        ul 
            for error in errors 
                li!=error.msg
